<h1><%= t :lesson %></h1>
<div class="row">
  <aside class="col-md-4">
    <div>
      <%= image_tag current_user.avatar.url :medium  %>
      <strong class="text-capitalize"><%= current_user.name %></strong>
    </div>
  </aside>
  <div class = "col-md-6">
    <p>
      <b><%= t :category %></b>
      <%= @lesson.category.title %>
    </p>
    <p>
      <b><%= t :total_word %></b>
      <%= @lesson.results.size %> <%= t :words %>
    </p>
    <div><%= t :limit_times %> <span id="time"></span> <%= t :minutes %></div>
    <ol>
      <%= form_for @lesson do |f| %>
        <%= f.fields_for :results do |result| %>
          <%= render "result/result_fields", f: result %>
        <% end %>
        <%= f.submit t(:submit), class: "btn btn-primary" %>
      <% end %>
    </ol>
  </div>
</div>
