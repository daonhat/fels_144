<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar.url %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
  <div class="col-md-8">
    <% if @activities.any? %>
      <h3> <%= t :activities %> (<%= @activities.count %>)</h3>
      <ul class="activities">
        <%= render @activities %>
      </ul>
      <%= will_paginate @activities %>
    <% end %>
  </div>
</div>
