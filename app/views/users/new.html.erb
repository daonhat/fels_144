<% provide :title, t(:signup) %>
<h1><%= t :signup %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t(:name) %>
      <%= f.text_field :name %>

      <%= f.label t(:email) %>
      <%= f.email_field :email %>

      <%= f.label t(:pass) %>
      <%= f.password_field :password %>

      <%= f.label t(:passconfirm), t(:passconfirm) %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(:create), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
