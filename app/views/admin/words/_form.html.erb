<%= form_for [:admin, @word] do |f| %>
  <div class="fields">
    <%= f.select :category_id,
      @categories.collect {|category| [category.title, category.id]} %>
    <p>
      <%= f.label :content %><br />
      <%= f.text_field :content, class: "form-control" %>
    </p>
    <div id="word_answers">
      <%= f.fields_for :word_answers do |builder| %>
        <%= render "word_answer_fields", f: builder %>
      <% end %>
    </div>
    <%= add_answer_link t(:new_answer), :word_answers, "word_answers" %>
    <%= new_fields_template f, :word_answers %>
    <p><%= f.submit t(:create) %></p>
  </div>
<% end %>
