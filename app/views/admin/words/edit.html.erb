<% provide :title, t(:edit_word) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 form-group">
    <%= form_for [:admin, @word] do |f| %>
      <div class="fields">
        <p>
          <%= f.label :content %><br />
          <%= f.text_field :content, class: "form-control" %>
        </p>
        <div id="word_answers">
          <%= f.fields_for :word_answers do |builder| %>
            <%= render "word_answer_fields", f: builder %>
          <% end %>
        </div>
        <%= add_answer_link t(:new_answer), :word_answers, "word_answers" %>
        <%= new_fields_template f, :word_answers %>
        <p><%= f.submit t(:save_change) %></p>
      </div>
    <% end %>
  </div>
</div>
