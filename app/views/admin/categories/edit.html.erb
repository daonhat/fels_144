<% provide :title, t(:edit_category) %>
<h1><%= t :update_category %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: @category %>
      
      <%= f.label t(:title) %>
      <%= f.text_field :title, placeholder: t(:compose_title_new_category),
        class: "form-control" %>

      <%= f.label t(:description) %>
      <%= f.text_area :description, placeholder: t(:compose_description_new_category),
        class: "form-control" %>

      <%= f.submit t(:update_category), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
