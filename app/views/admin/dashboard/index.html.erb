<div class="row">
  <div class="col-md-3 col-md-offset-3 col-xs-6">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= @users.count %></h3>
        <p><%= t "admin.user_register" %></p>
      </div>
      <div class="icon">
        <i class="glyphicon glyphicon-user"></i>
      </div>
      <%= link_to t(:more_info), admin_users_path, class: "small-box-footer" %>
    </div>
  </div>

  <div class="col-md-3 col-xs-6 ">
    <div class="small-box bg-green">
      <div class="inner">
        <h3><%= @words.count %></h3>
        <p><%= t "admin.word_in_web" %></p>
      </div>
      <div class="icon">
        <i class="glyphicon glyphicon-list-alt"></i>
      </div>
      <%= link_to t(:more_info), admin_words_path, class: "small-box-footer" %>
    </div>
  </div>
</div>
