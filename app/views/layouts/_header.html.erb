<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:project1), root_path, id: "logo" %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" 
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" 
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li ><%= link_to t(:home), root_path %></li>
        <li><%= link_to t(:help), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle tootip"
              data-toggle="dropdown" ><%= t :account %></a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), user_path(current_user) %></li>
              <li><%= link_to t(:setting), "#" %></li>
              <li><%= link_to t(:users), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
